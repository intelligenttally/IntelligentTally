<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:foreground="?attr/selectableItemBackground"
                                    app:cardBackgroundColor="@android:color/white"
                                    app:cardElevation="2dp"
                                    app:cardPreventCornerOverlap="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:stretchColumns="*">


            <TableRow android:layout_marginTop="@dimen/layout_default_spacing">

                <TextView
                    android:text="张三"
                    android:id="@+id/single_statistics_list_item_name_textView"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:text="60"
                    android:id="@+id/single_statistics_list_item_E_20_textView"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:text="60"
                    android:id="@+id/single_statistics_list_item_F_20_textView"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:text="60"
                    android:id="@+id/single_statistics_list_item_E_40_textView"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:text="60"
                    android:id="@+id/single_statistics_list_item_F_40_textView"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:text="60"
                    android:id="@+id/single_statistics_list_item_E_other_textView"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:text="60"
                    android:id="@+id/single_statistics_list_item_F_other_textView"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>