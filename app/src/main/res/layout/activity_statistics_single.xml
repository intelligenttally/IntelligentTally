<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             xmlns:app="http://schemas.android.com/apk/res-auto"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="3dp">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_statistics_single_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:stretchColumns="*">

                <TableRow android:layout_marginTop="@dimen/layout_default_spacing">

                    <TextView
                        android:layout_span="3"
                        android:paddingLeft="@dimen/default_padding_small"
                        android:text="理货员统计"
                        android:textColor="@color/cornflowerblue"
                        android:textStyle="bold"/>

                </TableRow>


                <TableRow android:layout_marginTop="@dimen/layout_default_spacing">

                    <TextView
                        android:width="@dimen/table_col_width"
                        android:text="姓名"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="E20"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="F20"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="E40"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="F40"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="EO"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="FO"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </TableRow>

            </TableLayout>


            <FrameLayout
                android:id="@+id/fragment_statistics_single_tally"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/layout_default_spacing"
                android:background="#B7B7B7"/>

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:stretchColumns="*">

                <TableRow android:layout_marginTop="@dimen/layout_default_spacing">

                    <TextView
                        android:layout_span="3"
                        android:paddingLeft="@dimen/default_padding_small"
                        android:text="操作员统计"
                        android:textColor="@color/cornflowerblue"
                        android:textStyle="bold"/>

                </TableRow>

                <TableRow android:layout_marginTop="@dimen/layout_default_spacing">

                    <TextView
                        android:width="@dimen/table_col_width"
                        android:text="姓名"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="E20"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="F20"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="E40"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="F40"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="EO"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:width="@dimen/default_table_col_width"
                        android:text="FO"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </TableRow>

            </TableLayout>

            <FrameLayout
                android:id="@+id/fragment_statistics_single_operate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


        </LinearLayout>

