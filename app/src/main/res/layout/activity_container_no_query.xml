<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             xmlns:app="http://schemas.android.com/apk/res-auto"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="3dp">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <SearchView
        android:id="@+id/activity_container_no_query_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:inputType="textFilter"
        android:queryHint="输入查询箱号"
        android:textColor="#ABABAB"
        android:textColorHint="#ABABAB"
        android:imeOptions="actionGo" />
    <!--android:gravity="left|center_vertical"-->
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/activity_container_no_query_recyclerView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->

    <ListView
        android:id="@+id/activity_container_no_query_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_listview_margin"
        android:layout_marginRight="@dimen/default_listview_margin"
        android:layout_weight="1">

    </ListView>

</android.widget.LinearLayout>